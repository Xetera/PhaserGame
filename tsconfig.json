{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom",
            "es6"
        ],
        "module": "es2015",
        "noEmitOnError": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "skipLibCheck": true
    },
    "exclude": [
        "./node_modules",
        "*.spec.ts",
        "./typings"
    ]
}
